<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:padding="@dimen/dp_16"
                android:id="@+id/image_view_news"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_news_title"
                android:layout_toEndOf="@+id/image_view_news"
                android:text="@string/news_title"
                android:fontFamily="@font/agency_fb"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_news_description"
                android:textSize="@dimen/small_text"
                android:fontFamily="@font/agency_fb"
                android:text="@string/news_description"
                android:layout_toEndOf="@+id/image_view_news"
                android:layout_below="@+id/text_view_news_title" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>